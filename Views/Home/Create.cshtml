@model TestTask.Models.AnnouncementViewModel
<form method="post" asp-action="Create" asp-controller="Home" asp-antiforgery="true">
    <div class="form-group">
        <label for="exampleFormControlInput1">Title Ad</label>
        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Car" asp-for="Name">
        <span asp-validation-for="Name"/>
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Description</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="5" asp-for="Description"></textarea>
        <span asp-validation-for="Description" />
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Price</label>
        <input type="number" class="form-control" id="exampleFormControlInput1" placeholder="4500" asp-for="Price">
    </div>
    <div class="form-group">
        <label for="exampleFormControlFile1">Choose photo</label>
        <input type="file" class="form-control-file multi" accept="image/*" multiple name="MainLinkPhoto[]">
    </div>
    <button class="btn btn-primary" asp-action="Create">Create Ad</button>
</form>